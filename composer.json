{
    "name": "ratiw/line-messaging",
    "description": "Simplify sending LINE messages using Messaging API.",
    "keywords": [
        "ratiw",
        "line-",
        "line-messaging",
        "line-notify",
        "PHP",
        "laravel"
    ],
    "homepage": "https://github.com/ratiw/line-messaging",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Rati Wannapanop",
            "email": "rati.wannapanop@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1"
    },
    "require-dev": {
        "orchestra/testbench": "^6.0",
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "Ratiw\\LineMessaging\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Ratiw\\LineMessaging\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    }
}
